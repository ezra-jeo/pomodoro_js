<script type="text/javascript" src="study_script.js"></script>
<link rel="stylesheet" href="timer_style.css" />

<div class="content-section">
    <div id="timer" data-cycle="{{cycle}}">
        <h1>Study Timer</h1>
        <div  class="timer-nums">
            <form id="study-nums"  class="timer-num-fields">
                <div><input type="text" name="study-hours" class="time-input" placeholder="00"/></div>:
                <div><input type="text" name="study-minutes" class="time-input" placeholder="25"/></div>:
                <div><input type="text" name="study-seconds" class="time-input" placeholder="00"/></div>
            </form>
        </div>
        <div id="timer-buttons">
            <button id="start-study" class="button-class">Start</button>
            <button id="stop-study" class="button-class">Stop</buttton>
            <button id="reset-study" class="button-class">Reset</button>
        </div>
    </div>
</div>