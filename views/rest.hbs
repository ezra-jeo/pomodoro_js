<script type="text/javascript" src="rest_script.js"></script>
<link rel="stylesheet" href="timer_style.css" />
<link rel="stylesheet" href="rest.css" />

<div class="content-section">
    <div id="timer" data-cycle="{{cycle}}">
        <h1>Rest Timer</h1>
        <div class="timer-nums">
            <form id="rest-nums" class="timer-num-fields">
                <div><input type="text" name="rest-hours" class="time-input" placeholder="00"/></div>:
                <div><input type="text" name="rest-minutes" class="time-input" placeholder="05"/></div>:
                <div><input type="text" name="rest-seconds" class="time-input" placeholder="00"/></div>
            </form>
        </div>
        <div id="timer-buttons">
            <button id="start-rest" class="button-class">Start</button>
            <button id="stop-rest" class="button-class">Stop</buttton>
            <button id="reset-rest" class="button-class">Reset</button>
        </div>
    </div>
</div>